def calculate_average(scores):
      # Implement the logic to calculate the average
      # average formula is sum of nums divided by quantity of nums
    print(sum(scores) / len(scores))

def categorize_grade(average_score):
      # Implement the logic to categorize the grade
      # run through conditionals for each grade A-F
    if average_score >= 90:
        print("A")
    elif average_score >= 80:
        print("B")
    elif average_score >= 70:
        print("C")
    elif average_score >= 60:
        print("D")
    else:
        print("F")

